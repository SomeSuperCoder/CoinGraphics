<TooltipMDIconButton@MDFloatingActionButton+MDTooltip>
<Tab>

    MDLabel:
        id: label
        text: "Tab 0"
        halign: "center"
ScreenManager:
    id: screen_manager
    Screen:
        name: "login_screen"
        MDCard:
            size_hint: .8, .88
            pos_hint: {"center_x": .5, "center_y": .5}
            elevation: 6
            orientation: "vertical"
            MDFloatLayout:
                MDLabel:
                    text: "Вход"
                    font_size: "50sp"
                    pos_hint: {"center_x": .85, "center_y": .85}
                MDIconButton:
                    icon: "scr/icon.png"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    icon_size: "150sp"
                MDTextField:
                    id: login
                    mode: "rectangle"
                    size_hint: .85, .09
                    width: "400dp"
                    hint_text: "Логин"
                    text_color_active: 1,1,1,1
                    pos_hint: {"center_x": .5, "center_y": .62}
                MDTextField:
                    id: password
                    mode: "rectangle"
                    size_hint: .85, .09
                    width: "400dp"
                    hint_text: "Пароль"
                    pos_hint: {"center_x": .5, "center_y": .48}
                MDRaisedButton:
                    text: " Войти "
                    text_size: "39sp"
                    pos_hint: {"center_x": .5, "center_y": .315}
                    on_release:
                        app.login_main_page()
    Screen:
        name: 'main_screen'
        MDIconButton:
            icon: "account"
            pos_hint: {'center_x': .9, 'center_y': .935}
            icon_size: '50sp'
        MDIconButton:
            icon: "bell"
            pos_hint: {'center_x': .1, 'center_y': .935}
            icon_size: '50sp'
        BoxLayout:
            orientation: 'vertical'
            MDFlatButton:
                text: '        '
            MDRoundFlatIconButton:
                text: 'ID: 814526785456'
                icon: 'content-copy'
                pos_hint: {'center_x': .5}
                id: id_users
                on_release:
                    app.copy_button_text()
            MDFlatButton:
                text: '        '
            MDFlatButton:
                id: balance_user
                text: '0.00 KN'
                font_size: '40sp'
                pos_hint: {'center_x': .5}
            MDFloatLayout:
                size_hint: 1, .4
                TooltipMDIconButton:
                    icon: 'send'
                    tooltip_text: 'Отправить'
                    pos_hint: {'center_x': .3, 'center_y': .7}
                    on_release: app.show_confirmation_dialog()
                TooltipMDIconButton:
                    icon: 'safe'
                    tooltip_text: "Стейкинг"
                    pos_hint: {'center_x': .5, 'center_y': .7}
                    on_release: app.staking_dialog()
                TooltipMDIconButton:
                    icon: 'script-text-outline'
                    tooltip_text: "Создать СмартКонтракт"
                    pos_hint: {'center_x': .7, 'center_y': .7}
            MDTabs:
                id: tabs
                on_tab_switch: app.on_tab_switch(*args)
                Tab:
                    title: "История"
                    icon: "history"
                Tab:
                    title: " "
                Tab:
                    title: "Магазин"
                    icon: "shopping"
    Screen:
        name: 'nig'
        MDCard:
            size_hint: .8, .88
            pos_hint: {"center_x": .5, "center_y": .5}
            elevation: 6
            orientation: "vertical"
            BoxLayout:
                orientation: "vertical"
                MDIconButton:
                    id: iconadmin
                    pos_hint: {"center_x": .5, "center_y": .9}
                    icon_size: "120sp"
                    icon: "account-circle-outline"
                    on_release: app.file_manager_open(1)

                MDLabel:
                    text: "Васильев\nАндрей Витальевич"
                    font_style: "Button"
                    size_hint_y: None
                    halign: "center"
                    font_size: "30sp"
                    pos_hint: {"center_y": .5}
                MDLabel:
                    text: "02.10.2009"
                    size_hint_y: None
                    font_size: "30sp"
                    halign: "center"
                    font_style: "Caption"

                ScrollView:
                    MDList:
                        scroll_y: None
                        OneLineAvatarListItem:
                            on_release: app.screen("settingadmin")
                            text: "Настройки профиля"
                            IconLeftWidget:
                                icon: "cog"
                        OneLineAvatarListItem:
                            text: "Выйти"
                            IconLeftWidget:
                                icon: "exit-to-app"
